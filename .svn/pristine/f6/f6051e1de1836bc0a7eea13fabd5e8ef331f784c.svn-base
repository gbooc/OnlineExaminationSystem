function selectOnlyThis(element) {

    if (element.checked) {
        element.classList.add("marked");
    } else {
        element.classList.remove("marked");
    }

    if (document.getElementsByClassName("marked").length > 1) {
        alert("Please select only one category.");
        element.checked = false;
        element.classList.remove("marked");
    }
}

