function checkInputs() {

    if ($("#q_titleID").val() == "") {

        $("#invalidID").show();
        setTimeout(function () {
            $("#invalidID").fadeOut("slow");
        }, 5500);

    } else if ($("#hrID").val() == "" || $("#minID").val() == "" || $("#passingRate").val() == "") {
        $("#limitError").show();
        setTimeout(function () {
            $("#limitError").fadeOut("slow");
        }, 5500);
    }else {
            $('.bs-example-modal-new').modal('show');
    }
}

function displayError(gi, tmp) {


    $("#nqError").fadeIn("slow");
    setTimeout(function () {
        $("#nqError").fadeOut();
    }, 5500);


    if ($("#" + gi).val() == "") {
        $("#" + gi + "error").show();
    }

    if ($("#" + tmp).val() == "") {
        $("#" + tmp + "error").show();
    }


    setTimeout(function () {
        $("#" + gi + "error").fadeOut("slow");
        $("#" + tmp + "error").fadeOut("slow");
    }, 5500);
}
