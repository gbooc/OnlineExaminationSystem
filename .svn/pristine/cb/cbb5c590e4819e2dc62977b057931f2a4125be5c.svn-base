@model webproject.Models.UserRegistration
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<h2>Register</h2>
@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
<div style="width:60%;">
    @Html.TextBoxFor(model => model.EmpID, new { @class = "form-control is-valid", @placeholder = "Employee ID" })
    @Html.TextBoxFor(model => model.Fullname, new { @class = "form-control is-valid", @placeholder = "Fullname" })
    @Html.TextBoxFor(model => model.Department, new { @class = "form-control is-valid", @placeholder = "Department" })
    <input class="btn btn-white" id="btn-main" type="submit" value="Submit">
</div>
}