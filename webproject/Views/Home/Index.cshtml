@model webproject.Models.UserDetails

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";

}
<script type="text/javascript">

    function Success() {
        var url = '@Url.Action("Dashboard", "Dashboard")#dashboard';
        window.location.href = url;
    }

    function Authenticated(code) {
        var url = '@Url.Action("AutoGeneratedList", "Examinations")';
        window.location.href = url + '?code='+code;
    }

    function Fail() {
        $("#invalidMsg").show();
    }
    function NoCode() {
         $("#invalidMsg1").show();
    }

    function OnBegin() {
        $('#img-loader').show();
    }
    function OnComplete() {
        $('#img-loader').hide();
    }

    function Register()
    {
         var url = '@Url.Action("Register", "Home")';
        window.location.href = url;
    }

    function trueOrFalse() {
    return true;
    }

    function switchBtn(type) {

        if (type == "0") {
            $("#fullcontrol").hide();
            $("#quickExam").fadeIn("slow");
            $("#empID").val("");
            $("#passwordID").val("");
        } else {
            $("#quickExam").hide();
             $("#fullcontrol").fadeIn("slow");
        }

    }

    window.location.hash="no-back-button";
    window.location.hash="Again-No-back-button";//again because google chrome don't insert first hash into history
    window.onhashchange=function(){window.location.hash="no-back-button";}

</script>

<div class="container" style="margin-top:150px;">
    <div class="box"></div>
    <div class="container-forms">
        <div class="container-form">
            <div class="form-item log-in">
                <div class="table">
                    <div class="table-cell">
                        <div class="avatar-img" style="margin-top:-4px;bottom:15px;margin-left:100px;">
                            <img src="~/Images/paper.jpg" style="width: 80px;height:80px;border-color:white;" />
                        </div>
                        @using (Ajax.BeginForm("Index", "Home", new AjaxOptions
                        {
                            HttpMethod = "POST",
                            //  UpdateTargetId = "LoginId",
                            OnBegin = "OnBegin",
                            OnComplete = "OnComplete"
                        }))
                        {
                            <div class="w3-center w3-animate-right">

                                <div id="fullcontrol">
                                    <font style="margin-left:40px;font-family:dotumche;margin-bottom:15px;">Hi, please login your account.</font>
                                    <hr />
                                    @Html.TextBoxFor(model => model.EmployeID, new { @autofocus = "autofocus", @class = "form-control is-valid", @id = "empID", @placeholder = "Employee ID" })
                                    @Html.TextBoxFor(model => model.Password, new { @autofocus = "autofocus", @class = "form-control is-valid", @id = "passwordID", @placeholder = "Password", @type = "password" })
                                    <small style="display:none;color:red;padding-left:25px;font-size:10px;" id="invalidMsg">Unable to proceed, please contact APC for assistance.</small>
                                    <input type="submit" value="Login" class="btn btn-danger" />
                                    <hr style="margin-bottom:-8px;" />
                                    <a href="#" style="font-size:13px;font-family:Calibri;margin-left:60px;padding-top:10px;" onclick="switchBtn('0')">Switch to control number login view.</a>
                                </div>
                            </div>
                        }
                        @using (Ajax.BeginForm("Index", "Home", new AjaxOptions
                        {
                            HttpMethod = "POST",
                            //  UpdateTargetId = "LoginId",
                            OnBegin = "OnBegin",
                            OnComplete = "OnComplete"
                        }))
                        {
                            <div id="quickExam" style="display:none;">
                                <font style="margin-left:40px;font-family:dotumche;margin-bottom:15px;">Hi, please enter your code.</font>
                                <hr />
                                <input type="hidden" />
                                @Html.TextBoxFor(model => model.ExamCode, new { @autofocus = "autofocus", @class = "form-control is-valid", @id = "validationServer01", @placeholder = "Examination Code" })
                                <small style="display:none;color:blue;padding-left:25px;font-size:10px;" id="invalidMsg1">Unable to proceed, please contact APC for assistance.</small>
                                <input type="submit" value="Proceed" class="btn btn-danger" />
                                <hr style="margin-bottom:-8px;" />
                                <a href="#" style="font-size:13px;font-family:Calibri;margin-left:60px;padding-top:10px;" onclick="switchBtn('1')">Switch to ID/Password login view.</a>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




